{
	"name": "vscode-ml-i18n",
	"displayName": "ML I18n",
	"description": "Extension for managing MagicLine GmbH i18n-keys",
	"publisher": "misantronic",
	"version": "0.0.1",
	"license": "MIT",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ml.i18n.search",
		"onCommand:ml.i18n.add",
		"onLanguage:typescript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
				"command": "ml.i18n.search",
				"title": "i18n: search"
			},
			{
				"command": "ml.i18n.add",
				"title": "i18n: add"
			}
		],
		"menus": {
			"editor/context": [{
					"command": "ml.i18n.search",
					"group": "z_commands"
				},
				{
					"command": "ml.i18n.add",
					"group": "z_commands"
				}
			]
		},
		"configuration": {
			"title": "ML I18n",
			"properties": {
				"ml.i18n.lang": {
					"title": "Language",
					"description": "Possible values are de, en, fr, it, pl, ru, sv, es, tr",
					"type": "string",
					"default": "de"
				},
				"ml.i18n.platform": {
					"title": "Platform ID",
					"description": "The ID of your platform, e.g. ml-webclient is 0",
					"type": "number",
					"default": 0
				},
				"ml.i18n.token": {
					"title": "Token",
					"description": "Please provide the Authorization Bearer when using i18n.magicline.com",
					"type": "string"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/request": "^2.48.1",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"copy-paste": "^1.3.0",
		"request": "^2.88.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/misantronic/vscode-ml-i18n.git"
	}
}
